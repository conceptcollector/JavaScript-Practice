//How Edabit Works challenge
function hello() {
	return "Hello edabit.com";
}

//Return the Sum of Two Numbers challenge
function addition(a, b) {
	let sum = a + b;
	return sum;
}

//Buggy Code (Part 1) challenge
function cubes(a) {
	return a ** 3;
}

//Power Calculator challenge
function circuitPower(voltage, current) {
	let power = voltage * current;
	return power;
}

//Return Something to Me! challenge
function giveMeSomething(a) {
	return "something " + a;
}

//Convert Hours into Seconds challenge
function howManySeconds(hours) {
	return hours * 3600;
}

//Maximum Edge of a Triangle challenge
function nextEdge(side1, side2) {
	side3 = (side1 + side2) - 1;
	return side3;
}

//Correct the Mistakes challenge
function squared(a) {
	return a * a;
}

//Sum of Polygon Angles challenge
function sumPolygon(n) {
	return (n - 2) * 180;
}

//Area of a Triangle challenge
function triArea(base, height) {
	return ((base * height) / 2);
}

//Less Than 100? challenge
function lessThan100(a, b) {
	return ((a + b) < 100 ? true : false);
}
